<h1><%= @restaurant.name %></h1>

<div class="btn-toolbar" role="toolbar">
  <%= link_to '+ Review the restaurant', new_restaurant_review_path(@restaurant), class: 'btn btn-warning mr-3' %>
  <%= link_to 'Back to restaurants list', restaurants_path, class: 'btn btn-info' %>
</div>
<h5 class="mt-3">Details</h5>
<div class="card my-3">
  <div class="card-body">
    <p class="card-text">Category: <strong><%= @restaurant.category %></strong></p>
    <p class="card-text">Address: <strong><%= @restaurant.address %></strong></p>
    <p class="card-text">Phone number: <strong><%= @restaurant.phone_number %></strong></p>
  </div>
</div>
<h5>You are writing a review for <%= @restaurant.name %></h5>
<%= simple_form_for [@restaurant, @review] do |f| %>
  <%= f.input :content %>
  <%= f.input :rating %>

  <%= f.submit 'Add review', class: 'btn btn-warning'  %>
<% end %>

<div class="reviews-container mt-3">
  <h5>Reviews</h5>
  <% @reviews.each do |review| %>
    <div class="card my-3 text-secondary">
      <div class="card-body">
        <p class="card-text">
          <%= review.content %>
          <br>
          Rating: <strong><%= review.rating %>/5</strong>
          <br>
          Published on: <%= review.created_at %></p>
      </div>
    </div>
  <% end %>
</div>
